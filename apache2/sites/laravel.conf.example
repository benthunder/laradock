<VirtualHost *:80>
  ServerName project_name.local
  DocumentRoot /var/www/project_name/public/
  Options Indexes FollowSymLinks

  <Directory "/var/www/project_name/public/">
    AllowOverride All
    <IfVersion < 2.4>
      Allow from all
    </IfVersion>
    <IfVersion >= 2.4>
      Require all granted
    </IfVersion>
  </Directory>

  ErrorLog /var/www/project_name/logs/apache2/project_name.error.log
  CustomLog /var/www/project_name/logs/apache2/project_name.access.log common
</VirtualHost>
